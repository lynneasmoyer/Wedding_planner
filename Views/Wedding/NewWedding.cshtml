@model Wedding

<h1>Plan A Wedding!</h1>
<a asp-action="Dashboard" asp-controller="Wedding">Dashboard</a><br>
<a asp-action="Logout" asp-controller="Home">Log Out</a>

<form class="col-5" asp-action="Process" asp-controller="Wedding" method="post">
        <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">
        <div class="form-group">
            <span asp-validation-for="WedderOne"></span>
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="WedderTwo"></span>
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Date"></span>
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="EndTime"></span>
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Address"></span>
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create Wedding">
        </div>
</form>